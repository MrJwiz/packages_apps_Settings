<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/twisted_settings_title" >
  
    <PreferenceScreen
        android:key="about_twisted"
        android:fragment="com.android.settings.twisted.TwistedAbout"
        android:title="@string/twisted_menu_about" />

 <PreferenceCategory
  android:key="nav_bar"
  android:title="@string/nav_bar_setting" >

        <SwitchPreference
                android:key="enable_nav_bar"
                android:title="@string/navbar_enable_bar"
                android:summary="@string/navbar_enable_bar_summary" />

            <PreferenceScreen
                    android:key="navbar_button_settings"
                    android:fragment="com.android.settings.slim.dslv.ActionListViewSettings"
		    android:summary="@string/summary_navbar_button"
                    android:title="@string/navbar_button_title">
                <extra android:name="actionMode" android:value="0" />
                <extra android:name="maxAllowedButtons" android:value="5" />
                <extra android:name="disableDeleteLastEntry" android:value="true" />
                <extra android:name="fragment" android:value="com.android.settings.slim.fragments.NavbarButtonFragment" />
            </PreferenceScreen>

            <PreferenceScreen
                android:key="navbar_style_dimen_settings"
                android:fragment="com.android.settings.slim.NavbarStyleDimenSettings"
		android:summary="@string/summary_navbar_style_dimen_title"
                android:title="@string/navbar_style_dimen_title" />

            <ListPreference
                    android:key="pref_navbar_menu_display"
                    android:entries="@array/pref_menu_display_entries"
                    android:entryValues="@array/pref_menu_display_values"
                    android:title="@string/title_pref_menu_display"
                    android:summary="@string/summary_pref_menu_display" />

            <ListPreference
                    android:key="pref_navbar_menu_location"
                    android:entries="@array/pref_navigation_menu_entries"
                    android:entryValues="@array/pref_navigation_menu_values"
                    android:title="@string/title_pref_menu_location"
                    android:summary="@string/summary_pref_menu_location" />
	    
            <SwitchPreference
                    android:key="navbar_can_move"
                    android:title="@string/navbar_can_move"
                    android:summary="@string/navbar_can_move_summary" />

            <SwitchPreference
                    android:key="dim_nav_buttons"
                    android:title="@string/dim_nav_buttons_title"
                    android:summary="@string/dim_nav_buttons_summary" />

            <SwitchPreference
                    android:key="dim_nav_buttons_touch_anywhere"
                    android:dependency="dim_nav_buttons"
                    android:title="@string/dim_nav_buttons_touch_anywhere_title"
                    android:summaryOn="@string/dim_nav_buttons_touch_anywhere_summary_on"
                    android:summaryOff="@string/dim_nav_buttons_touch_anywhere_summary_off" />
	    
            <SlimSeekBarPreference
                    android:key="dim_nav_buttons_timeout"
                    android:dependency="dim_nav_buttons"
                    android:title="@string/dim_nav_buttons_timeout_title"
                    android:summary="@string/dim_nav_buttons_timeout_summary" />

            <SlimSeekBarPreference
                    android:key="dim_nav_buttons_alpha"
                    android:dependency="dim_nav_buttons"
                    android:title="@string/dim_nav_buttons_alpha_title"
                    android:summary="@string/dim_nav_buttons_alpha_summary" />

            <SwitchPreference
                    android:key="dim_nav_buttons_animate"
                    android:dependency="dim_nav_buttons"
                    android:title="@string/dim_nav_buttons_animate_title"
                    android:summary="@string/dim_nav_buttons_animate_summary" />

            <SlimSeekBarPreference
                    android:key="dim_nav_buttons_animate_duration"
                    android:dependency="dim_nav_buttons_animate"
                    android:title="@string/dim_nav_buttons_animate_duration_title"
                    android:summary="@string/dim_nav_buttons_animate_duration_summary" />

            <com.android.settings.slim.SecureSettingSwitchPreference
                android:key="search_panel_enabled"
                android:title="@string/navigation_ring_enable_title"
                android:defaultValue="true" />

            <PreferenceScreen
                android:key="navigation_bar_ring"
                android:fragment="com.android.settings.slim.NavRing"
                android:summary="@string/navigation_ring_summary"
                android:title="@string/navigation_ring_customize"
                android:dependency="search_panel_enabled" />	    
  </PreferenceCategory>	

  <PreferenceCategory
  android:key="status_bar"
  android:title="@string/status_bar_setting" >
    
     <PreferenceScreen
        android:key="quick_settings"
        android:fragment="com.android.settings.slim.QsSettings"
        android:summary="@string/summary_qs_title"
        android:title="@string/qs_title" />

<!-- StatusBar -->
     <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.slim.StatusBar"
	android:summary="@string/summary_status_bar_title"
        android:title="@string/status_bar_title" />

<!-- Network Traffic -->	
    <PreferenceScreen
	android:key="network_traffic_state"
	android:fragment="com.android.settings.simpleaosp.NetworkTraffic"
	android:summary="@string/network_traffic_summary"
	android:title="@string/network_traffic_title" />
    
    <SwitchPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:persistent="false"
            android:defaultValue="false" />
    
    <com.android.settings.slim.SystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_to_sleep_title"
            android:summary="@string/double_tap_to_sleep_summary"
            android:defaultValue="true" />
 
    <com.android.settings.slim.SystemSettingSwitchPreference
        android:key="status_bar_show_weather"
        android:title="@string/status_bar_show_weather_title"
        android:summary="@string/status_bar_show_weather_summary"
        android:defaultValue="false" />

  </PreferenceCategory>

  <PreferenceCategory
  android:key="notif_sound"
  android:title="@string/notif_sound_setting" >
    
  <!-- Advanced Sound options -->
        <PreferenceScreen
                android:key="advanced_sound_settings"
                android:title="@string/advanced_sound_title"
		android:summary="@string/summary_advanced_sound_title"
                android:persistent="false"
                android:fragment="com.android.settings.slim.SoundSettings" />

   <!-- Pulse notification light -->
        <PreferenceScreen
                android:key="notification_light"
		android:summary="@string/summary_notification_light_title"
                android:title="@string/notification_light_title"
                android:fragment="com.android.settings.notificationlight.NotificationLightSettings" />

   <!-- Battery light -->
        <PreferenceScreen
                android:key="battery_light"
                android:title="@string/battery_light_title"
                android:summary="@string/summary_battery_light_title"
                android:fragment="com.android.settings.notificationlight.BatteryLightSettings" />
  </PreferenceCategory>
    
  <PreferenceCategory
         android:key="systemwide_settings"
         android:title="@string/systemwide_setting" >
    
    <PreferenceScreen
        android:key="recent_panel"
        android:fragment="com.android.settings.slim.RecentPanel"
	android:summary="@string/summary_recent_panel_category"
        android:title="@string/recent_panel_category" />
    
      <!-- LCD -->		  
     <ListPreference
          android:key="lcd_density"
          android:title="@string/lcd_density"
          android:persistent="false" />

    <PreferenceScreen
        android:key="animation_settings"
        android:title="@string/animation_title"
	android:summary="@string/summary_animation_title"
        android:fragment="com.android.settings.euphoria.animation.AnimationSettings" />
        
    <PreferenceScreen
        android:key="expanded_desktop"
        android:title="@string/power_menu_expanded_desktop"
        android:summary="@string/summary_power_menu_expanded_desktop"
        android:fragment="com.android.settings.applications.ExpandedDesktopPreferenceFragment" />

     <PreferenceScreen
         android:key="privacy_guard_manager"
         android:title="@string/privacy_guard_manager_title"
         android:summary="@string/summary_privacy_guard_manager_title"
         android:fragment="com.android.settings.terminus.privacyguard.PrivacyGuardManager" />

      <PreferenceScreen
          android:key="wakelock_blocker"
          android:fragment="com.android.settings.terminus.WakeLockBlocker"
	  android:summary="@string/summary_wakelock_blocker_title"
          android:title="@string/wakelock_blocker_title" />

  </PreferenceCategory>
  
  <PreferenceCategory
         android:key="misc_settings"
         android:title="@string/misc_setting" >

    <PreferenceScreen
        android:key="pie_settings"
        android:fragment="com.android.settings.slim.PieControl"
        android:title="@string/pie_control_title" />

    <PreferenceScreen
        android:key="battery_bar"
        android:fragment="com.android.settings.validus.BatteryBar"
        android:summary="@string/battery_bar_summary"
        android:title="@string/battery_bar" />

    <PreferenceScreen
        android:key="navbar_targets_settings"
        android:fragment="com.android.settings.slim.dslv.ActionListViewSettings"
	android:summary="@string/summary_power_menu_title"
        android:title="@string/power_menu_title">
            <extra android:name="actionMode" android:value="5" />
            <extra android:name="maxAllowedActions" android:value="6" />
            <extra android:name="disableLongpress" android:value="true" />
            <extra android:name="disableDeleteLastEntry" android:value="true" />
            <extra android:name="actionValues" android:value="shortcut_action_power_menu_values" />
            <extra android:name="actionEntries" android:value="shortcut_action_power_menu_entries" />
            <extra android:name="fragment" android:value="com.android.settings.slim.fragments.PowerMenuFragment" />
    </PreferenceScreen>

    <!-- ScreenRecorder -->
        <PreferenceScreen
            android:key="screen_recorder"
            android:title="@string/screen_recorder_title"
            android:summary="@string/screen_recorder_summary"
            android:fragment="com.android.settings.slim.ScreenRecorderSettings" >
        </PreferenceScreen>   

        <!-- LiveDisplay -->
        <PreferenceScreen
                android:key="live_display"
                android:title="@string/live_display_title"
                android:summary="@string/live_display_summary"
                android:fragment="com.android.settings.livedisplay.LiveDisplay" />

<!-- Preference categories are dynamically created based on the list of available storage volumes -->
    <!-- Partition info -->

        <!-- Partition info -->
        <Preference
            android:title="@string/partition_info_title"
            android:summary="@string/partition_info_summary">
        <intent
            android:action="com.android.action.MAIN"
            android:targetPackage="com.android.settings"
            android:targetClass="com.android.settings.PartitionInfo" />
        </Preference>
	
    <!-- IME -->		
    <PreferenceScreen
        android:key="keyboard_input_settings"
        android:fragment="com.android.settings.slim.InputMethodsSettings"
	android:summary="@string/summary_title_keyboard_input"
        android:title="@string/title_keyboard_input" />
    
    
    <PreferenceScreen
        android:key="lock_clock"
        android:title="@string/lock_clock_title"
        android:summary="@string/lock_clock_summary">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="com.cyanogenmod.lockclock"
            android:targetClass="com.cyanogenmod.lockclock.preference.Preferences" />
    </PreferenceScreen>

  </PreferenceCategory>

</PreferenceScreen>
