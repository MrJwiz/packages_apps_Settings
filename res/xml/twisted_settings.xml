<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
android:title="@string/twisted_settings_title">

<!-- Twisted Tweaks Cat -->
<PreferenceCategory
android:key="twisted"
android:title="@string/twisted_tweak_title">
<!-- Twisted About -->
<PreferenceScreen
android:key="twisted_about"
android:title="@string/twisted_about_title"
android:summary="@string/twisted_about_summary"/>
<!-- Twisted Apps -->
<PreferenceScreen
android:key="twisted_apps"
android:title="@string/twisted_apps_title"
android:summary="@string/twisted_apps_summary"/>
<!-- Twisted Wallpapers -->
<PreferenceScreen
android:key="twisted_wallpapers"
android:title="@string/twisted_wallpapers_title"
android:summary="@string/twisted_wallpapers_summary"/>
<!-- Twisted Changelog -->
<PreferenceScreen
android:key="twisted_changelog"
android:title="@string/twisted_changelog_title"
android:summary="@string/twisted_changelog_summary"/>
</PreferenceCategory>

<!-- Twisted UI Cat -->
<PreferenceCategory
android:key="twisted_ui"
android:title="@string/twisted_ui_title">
<!-- StatusBar -->
<PreferenceScreen
android:id="@+id/twisted_statusbar"
android:fragment="com.android.settings.twisted.StatusBarSettings"
android:title="@string/statusbar_tweak_title"
android:summary="@string/statusbar_tweak_summary"/>
<!-- Display -->
<PreferenceScreen
android:key="twisted_display"
android:fragment="com.android.settings.twisted.TwistedDisplaySettings"
android:title="@string/display_tweak_title"
android:summary="@string/display_tweak_summary"/>
<!-- NavigationBar -->
<PreferenceScreen
android:key="twisted_navbar"
android:title="@string/navbar_tweak_title"
android:summary="@string/navbar_tweak_summary"/>
</PreferenceCategory>

<!-- Navbar -->
<PreferenceScreen
android:id="@+id/navbar_settings"
android:fragment="com.android.settings.benzo.NavbarSettings"
android:title="@string/navbar_settings_title"/>

<PreferenceScreen
android:key="wakelock_blocker"
android:fragment="com.android.settings.terminus.WakeLockBlocker"
android:title="@string/wakelock_blocker_title" />

      <PreferenceScreen
        android:fragment="com.android.settings.chroma.StatusBarClockStyle"
        android:key="clock_style_pref"
        android:title="@string/status_bar_clock"
	    android:summary="@string/status_bar_clock_summary" />

    <PreferenceScreen
        android:key="lock_screen_general_category"
        android:fragment="com.android.settings.chroma.LockScreenSettings"
        android:title="@string/lockscreen_title" />

<PreferenceScreen
android:layout="@layout/intent_top_bottom_spacer_twisted"
/>

</PreferenceScreen>

        <!-- Buttons -->
        <PreferenceScreen
            android:id="@+id/button_settings"
            android:fragment="com.android.settings.ButtonSettings"
            android:title="@string/button_settings_title"
            android:layout="@layout/preference_benzoextra_buttons"/>
</PreferenceScreen>