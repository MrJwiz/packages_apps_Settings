<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/twisted_statusbar"
android:title="@string/statusbar_tweak_title">

<PreferenceCategory
android:key="category_battery_options"
android:title="@string/battery_title" >
<PreferenceScreen
android:fragment="com.android.settings.twisted.BatterySettings"
android:key="battery_style_pref"
android:title="@string/battery_title"
android:summary="@string/battery2_summary" />
</PreferenceCategory>

<PreferenceCategory
android:key="category_clock_options"
android:title="@string/status_bar_clock" >
<PreferenceScreen
android:fragment="com.android.settings.chroma.StatusBarClockStyle"
android:key="clock_style_pref"
android:title="@string/status_bar_clock"
android:summary="@string/status_bar_clock_summary" />
</PreferenceCategory>

<PreferenceCategory
android:key="category_network_traffic_options"
android:title="Network Traffic Meter" >
<PreferenceScreen
android:key="network_traffic_settings"
android:title="@string/network_traffic_title"
android:fragment="com.android.settings.benzo.NetworkTrafficSettings" />
</PreferenceCategory>   

<PreferenceCategory
android:key="category_header_options"
android:title="@string/contexual_header_title" >
<com.android.settings.preference.SystemSettingSwitchPreference
android:key="status_bar_custom_header"
android:title="@string/status_bar_custom_header_title"
android:summary="@string/status_bar_custom_header_summary"
android:defaultValue="false"/>
 <SwitchPreference
android:key="status_bar_custom_header_default"
android:title="@string/status_bar_custom_header_default_title"
android:summary="@string/status_bar_custom_header_default_summary"
android:dependency="status_bar_custom_header"
android:defaultValue="false"/>
</PreferenceCategory>

<com.android.settings.chroma.SystemSettingSwitchPreference
android:key="status_bar_brightness_control"
android:title="@string/status_bar_toggle_brightness"
android:summary="@string/status_bar_toggle_brightness_summary"/>

<com.android.settings.preference.SystemSettingSwitchPreference
android:key="double_tap_sleep_gesture"
android:title="@string/double_tap_to_sleep_title"
android:summary="@string/double_tap_to_sleep_summary" />

<com.android.settings.chroma.SystemSettingSwitchPreference
android:key="status_bar_notif_count"
android:title="@string/status_bar_notif_count_title"
android:summary="@string/status_bar_notif_count_summary"
android:defaultValue="false" />

<com.android.settings.chroma.SystemSettingSwitchPreference
android:key="status_bar_show_weather"
android:title="@string/status_bar_show_weather_title"
android:summary="@string/status_bar_show_weather_summary"
android:defaultValue="false" />

<PreferenceScreen
android:key="breathing_notifications"
android:fragment="com.android.settings.benzo.BreathingNotifications"
android:title="@string/breathing_notifications_title" 
android:summary="@string/breathing_notifications_summary" />

<com.android.settings.chroma.SecureSettingSwitchPreference
android:key="qs_show_brightness_slider"
android:title="@string/qs_brightness_slider_title_eos"
android:summary="@string/qs_brightness_slider_summary"
android:defaultValue="true" />

<com.android.settings.chroma.SecureSettingSwitchPreference
android:key="qs_use_four_columns"
android:title="@string/qs_four_columns_title"
android:defaultValue="false" />

</PreferenceScreen>

